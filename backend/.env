# Database
DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_automation

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# JWT Settings
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Server Settings
API_HOST=0.0.0.0
